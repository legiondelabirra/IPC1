<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="576.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="academia.inicio.InicioController">
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="40.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="TOP" text="ACADEMIA" VBox.vgrow="ALWAYS">
                     <font>
                        <Font name="Impact" size="30.0" />
                     </font>
                  </Label>
                  <HBox>
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </HBox>
                  <HBox spacing="120.0">
                     <children>
                        <Button fx:id="alumno" mnemonicParsing="false" onAction="#onAlumnoClicked" prefHeight="15.0" prefWidth="100.0" text="Alumno" />
                        <Button fx:id="curso" mnemonicParsing="false" onAction="#onCursoClicked" prefHeight="15.0" prefWidth="100.0" text="Cursos" />
                        <Button fx:id="matricula" mnemonicParsing="false" onAction="#onMatriculaClicked" prefHeight="15.0" prefWidth="100.0" text="Matricula" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
